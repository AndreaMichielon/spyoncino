# =============================================================================
# SECRETS CONFIGURATION - EXAMPLE FILE
# =============================================================================
# ⚠️  SECURITY WARNING: This is an EXAMPLE file!
#
# TO USE:
# 1. Copy this file to secrets.yaml:
#    cp secrets.yaml.example secrets.yaml
#
# 2. Fill in your actual values below
#
# 3. Secure the file (Linux/Mac):
#    chmod 600 secrets.yaml
#
# 4. NEVER commit secrets.yaml to version control!
#    (It's already in .gitignore)
#
# =============================================================================
# ALTERNATIVE: You can also use environment variables instead of this file:
#   - TELEGRAM_BOT_TOKEN
#   - SECURITY_SETUP_PASSWORD
#   - TELEGRAM_CHAT_ID
# =============================================================================

# =============================================================================
# TELEGRAM CREDENTIALS
# =============================================================================
# Get your bot token from @BotFather on Telegram
telegram:
  token: "your_bot_token_here"    # REQUIRED: Telegram bot token from @BotFather
  chat_id: null                   # Optional: Will be auto-detected from first message

# =============================================================================
# EMAIL / SMTP OUTPUT (OPTIONAL)
# =============================================================================
# Values below are consumed by modules like `modules.output.email_notifier`.
# You can reference them from config.yaml via Dynaconf expressions, e.g.
#   recipients: "@secrets email.recipients"
#   smtp_password: "@secrets email.smtp_password"
email:
  smtp_host: "smtp.example.com"   # REQUIRED: SMTP server hostname
  smtp_port: 587                  # Typical TLS port
  smtp_username: "bot@example.com"  # Optional username
  smtp_password: "change-me"      # NEVER commit real passwords
  default_sender: "spyoncino@example.com"
  recipients:
    - "security@example.com"
    - "ops@example.com"

# =============================================================================
# WEBHOOK OUTPUT (OPTIONAL)
# =============================================================================
# For modules like `modules.output.webhook_notifier`. Keep secrets (tokens, keys)
# here and reference them from config.yaml with "@secrets webhook.headers".
webhook:
  url: "https://hooks.example.com/spyoncino"
  headers:
    Authorization: "Bearer replace-me"
    X-Custom-Signature: "sha256=..."

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Setup password for first-time superuser configuration
authentication:
  # First-time setup password
  setup_password: "YourSecurePassword123!"  # RECOMMENDED: Strong password for /setup command

  # User management (managed by bot, don't edit manually)
  superuser_id: null              # Auto-set during /setup command
  user_whitelist: []              # Auto-managed via /whitelist_add and /whitelist_remove
