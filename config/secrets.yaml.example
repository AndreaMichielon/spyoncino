# =============================================================================
# TELEGRAM CREDENTIALS
# =============================================================================
# Get your bot token from @BotFather on Telegram
telegram:
  token: "your_bot_token_here"    # REQUIRED: Telegram bot token from @BotFather
  chat_id: null                   # Optional: Will be auto-detected from first message

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Setup password for first-time superuser configuration
authentication:
  # First-time setup password
  setup_password: "YourSecurePassword123!"  # RECOMMENDED: Strong password for /setup command

  # User management (managed by bot, don't edit manually)
  superuser_id: null              # Auto-set during /setup command
  user_whitelist: []              # Auto-managed via /whitelist_add and /whitelist_remove
